<div class="container">
  <div class="page-header">
    <h1>Done! <small>Your todo app that gets shit done!</small></h1>
  </div>

  <%= form_for @task, remote: true do |f| %>
    <div class="form-group newtodo">
      <div class="col-xs-11">
      <%= f.text_field :title, placeholder: "New Todo Name", class: "form-control input-lg" %>
      </div>
      <div class="col-xs-1">
        <%= f.submit "+", class: "btn btn-lg btn-default btn-block btn-success"%>
      </div>
    </div>
  <% end %>


  <ul class="items list-unstyled">


    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>

  </ul>


</div>
